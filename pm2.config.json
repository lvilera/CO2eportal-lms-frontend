{
  "apps": [
    {
      "name": "lms-front",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/CO2eportal-lms-frontend",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "HOST": "0.0.0.0"
      },
      "error_file": "/var/log/pm2/lms-front-error.log",
      "out_file": "/var/log/pm2/lms-front-out.log",
      "log_file": "/var/log/pm2/lms-front-combined.log",
      "time": true,
      "watch": false,
      "max_memory_restart": "500M"
    }
  ]
}
